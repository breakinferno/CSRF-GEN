{
  "name": "csrf-token-gen",
  "version": "1.0.0",
  "description": "csrf-token for koa middleware",
  "main": "index.js",
  "scripts": {
    "test": "jest --config .jest.js",
    "build": "tsc --module UMD && rollup -c rollup.config.ts",
    "start": "npm run build -- -w",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "lint": "tslint --project . src/**/*.ts",
    "examples": "npm run build && node ./examples/examples.js"
  },
  "husky": {
      "hooks": {
        "pre-commit": "npm test && npm run lint && sh ./scripts/check-branch-name.sh",
        "commit-msg": "commitlint -E $GIT_PARAMS"
      }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.futunn.com:nodepackage/csrf.git"
  },
  "keywords": [
    "csrf",
    "koa",
    "nodejs"
  ],
  "author": "luffylv",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.5",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  }
}
